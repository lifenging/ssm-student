<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdpi.dao.ClazzDao">

    <select id="findByName" resultType="Clazz">
         select * from clazz where name=#{name}
    </select>

    <select id="findAll" resultType="Clazz">
        select * from clazz
    </select>

    <select id="findList" parameterType="Map" resultType="Clazz">
  		select * from clazz where 1=1
  		<if test="name!=null">
            and name like #{name}
        </if>
        <if test="gradeId!=null">
            and gradeId=#{gradeId}
        </if>
  		limit #{offset},#{pageSize}
  	</select>

    <select id="getTotal" parameterType="Map" resultType="Integer">
  		select count(id) from clazz where 1=1
  		<if test="name!=null">
          and name like #{name}
        </if>
        <if test="gradeId!=null">
            and gradeId=#{gradeId}
        </if>
  	</select>

    <update id="add" parameterType="Clazz">
  		insert into clazz(id,name,remark,gradeId) values(null,#{name},#{remark},#{gradeId})
  	</update>
    <update id="update">
        update clazz set name=#{name},remark=#{remark},gradeId=#{gradeId} where id=#{id}
    </update>

    <delete id="delete">
        delete from clazz where id in (${value})
    </delete>
</mapper>